{
  "name": "scalpel",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "d3": "^4.10.2",
    "material-ui": "1.0.0-beta.10",
    "material-ui-icons": "1.0.0-beta.10",
    "moment": "2.18.0", // 1.18.1 does not work on Mac. No reason to use that one..
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "react": "^15.6.1",
    "react-datepicker": "^0.55.0",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.0.13",
    "react-swipeable-views": "^0.12.8",
    "redux": "^3.7.2",
    "typeface-roboto": "0.0.35"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "./node_modules/.bin/eslint ./; exit 0"
  },
  "devDependencies": {
    "eslint": "^4.6.1",
    "eslint-plugin-jest": "^21.1.0",
    "eslint-plugin-react": "^7.3.0"
  }
}
